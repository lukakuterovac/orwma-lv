<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnswerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/bestPlayerText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/bestPlayer_text"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:id="@+id/playerNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/bestPlayerText"
            app:layout_constraintStart_toStartOf="@+id/bestPlayerText"
            app:layout_constraintTop_toBottomOf="@+id/bestPlayerText" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/back_text"
            app:layout_constraintEnd_toEndOf="@+id/playerNameText"
            app:layout_constraintStart_toStartOf="@+id/playerNameText"
            app:layout_constraintTop_toBottomOf="@+id/playerNameText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>